# Server configuration
PORT=3000
NODE_ENV=development

# Authentication
JWT_SECRET=your-jwt-secret-key
JWT_EXPIRATION=3600 # 1 hour in seconds

# Logging
LOG_LEVEL=info # debug, info, warn, error

# CORS
CORS_ORIGIN=* # Use comma-separated list for multiple origins

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000 # 15 minutes in milliseconds
RATE_LIMIT_MAX_REQUESTS=100

# Component URLs
WORKFLOW_DEFINITION_URL=http://localhost:3001
EXECUTION_ENGINE_URL=http://localhost:3002
PROGRESS_TRACKING_URL=http://localhost:3003
CONTEXT_MANAGEMENT_URL=http://localhost:3004
DEPENDENCY_MANAGEMENT_URL=http://localhost:3005
SYNCHRONIZATION_URL=http://localhost:3006
RESOURCE_MANAGEMENT_URL=http://localhost:3007

# Database (if needed)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=workflow_orchestration
DB_USER=postgres
DB_PASSWORD=postgres

# Redis (for caching, rate limiting, etc.)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# GraphQL
GRAPHQL_PATH=/graphql
GRAPHQL_PLAYGROUND=true # Set to false in production

