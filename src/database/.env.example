# Task Master Database Configuration
# Phase 4.1: Comprehensive Database & Event Storage Implementation

# PostgreSQL Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=taskmaster
DB_USER=taskmaster
DB_PASSWORD=secure_password
DB_SSL=false
DB_POOL_MIN=2
DB_POOL_MAX=20
DB_ACQUIRE_TIMEOUT=30000
DB_IDLE_TIMEOUT=600000

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_password
REDIS_DB=0

# Elasticsearch Configuration
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_USER=elastic
ELASTICSEARCH_PASSWORD=changeme

# Test Database Configuration (for testing)
TEST_DB_HOST=localhost
TEST_DB_PORT=5432
TEST_DB_NAME=taskmaster_test
TEST_DB_USER=taskmaster_test
TEST_DB_PASSWORD=test_password
TEST_REDIS_HOST=localhost
TEST_REDIS_PORT=6379
TEST_REDIS_DB=1
TEST_ELASTICSEARCH_URL=http://localhost:9200
TEST_ELASTICSEARCH_USER=elastic
TEST_ELASTICSEARCH_PASSWORD=changeme

# Event Storage Configuration
EVENT_BATCH_SIZE=100
EVENT_FLUSH_INTERVAL=5000
EVENT_DEDUPLICATION=true
EVENT_RETENTION_DAYS=90

# Analytics Configuration
ANALYTICS_CACHE_TTL=300
ANALYTICS_REPORT_RETENTION_DAYS=365

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Performance Configuration
QUERY_TIMEOUT=30000
CONNECTION_TIMEOUT=10000
MAX_CONNECTIONS=50

# Security Configuration
ENABLE_SSL=true
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem
SSL_CA_PATH=/path/to/ca.pem

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30000

# Development Configuration
NODE_ENV=development
DEBUG=taskmaster:*

